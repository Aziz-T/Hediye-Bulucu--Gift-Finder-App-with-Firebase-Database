<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bul.DashboardFragment">
    <TextView
        android:id="@+id/textAd"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Ad Soyad:  "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#050505"/>
    <EditText
        android:id="@+id/adSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAd"
        android:hint="(İsteğe Bağlı)"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/textCinsiyet"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Cinsiyet: "
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/adSoyad"
        android:textSize="20sp"
        android:textColor="#050505"/>

    <Spinner
        android:id="@+id/cinsiyetSp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textCinsiyet"
        android:layout_below="@id/adSoyad"
        />
    <TextView
        android:id="@+id/textYas"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Yaş : "
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/textCinsiyet"
        android:textSize="20sp"
        android:textColor="#050505"/>
    <Spinner
        android:id="@+id/yasSp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textCinsiyet"
        android:layout_below="@id/cinsiyetSp"
        />
    <TextView
        android:id="@+id/textİlgi"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="İlgi Alanlari: "
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/textYas"
        android:textSize="20sp"
        android:textColor="#050505"/>
    <Spinner
        android:id="@+id/ilgialaniSp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textİlgi"
        android:layout_below="@id/yasSp"
        />
    <TextView
        android:id="@+id/textOzel"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Özel Günler:"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/textİlgi"
        android:textSize="20sp"
        android:textColor="#050505"/>
    <Spinner
        android:id="@+id/ozelgunlerSp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textİlgi"
        android:layout_below="@id/ilgialaniSp"
        />
    <Button
        android:id="@+id/bulButon"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ozelgunlerSp"
        android:layout_centerHorizontal="true"
        android:text="HEDİYE BUL"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_bul_button"
        />


</RelativeLayout>